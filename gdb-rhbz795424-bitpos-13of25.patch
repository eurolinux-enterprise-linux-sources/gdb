---
 gdb/ChangeLog |    5 +++++
 gdb/infrun.c  |    3 +--
 2 files changed, 6 insertions(+), 2 deletions(-)

Index: gdb-7.2/gdb/infrun.c
===================================================================
--- gdb-7.2.orig/gdb/infrun.c
+++ gdb-7.2/gdb/infrun.c
@@ -6356,11 +6356,10 @@ restore_inferior_thread_state (struct in
   if (inf_state->siginfo_gdbarch == gdbarch)
     {
       struct type *type = gdbarch_get_siginfo_type (gdbarch);
-      size_t len = TYPE_LENGTH (type);
 
       /* Errors ignored.  */
       target_write (&current_target, TARGET_OBJECT_SIGNAL_INFO, NULL,
-		    inf_state->siginfo_data, 0, len);
+		    inf_state->siginfo_data, 0, TYPE_LENGTH (type));
     }
 
