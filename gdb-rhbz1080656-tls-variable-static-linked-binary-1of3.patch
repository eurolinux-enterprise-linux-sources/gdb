Index: gdb-7.2/gdb/gdbserver/linux-x86-low.c
===================================================================
--- gdb-7.2.orig/gdb/gdbserver/linux-x86-low.c
+++ gdb-7.2/gdb/gdbserver/linux-x86-low.c
@@ -138,6 +138,7 @@ static const int x86_64_regmap[] =
 };
 
 #define X86_64_NUM_REGS (sizeof (x86_64_regmap) / sizeof (x86_64_regmap[0]))
+#define X86_64_USER_REGS (GS + 1)
 
 #else /* ! __x86_64__ */
 
@@ -267,6 +268,10 @@ x86_fill_gregset (struct regcache *regca
 	  collect_register (regcache, i, ((char *) buf) + x86_64_regmap[i]);
       return;
     }
+
+  /* 32-bit inferior registers need to be zero-extended.
+     Callers would read uninitialized memory otherwise.  */
+  memset (buf, 0x00, X86_64_USER_REGS * 8);
 #endif
 
   for (i = 0; i < I386_NUM_REGS; i++)
